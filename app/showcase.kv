<ShowcaseScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: content.height > root.height - dp(16)
        AnchorLayout:
            height: max(root.height, content.height)
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (.8, None)
                height: self.minimum_height


BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .8, .8, .8
        Rectangle:
            size: self.size
