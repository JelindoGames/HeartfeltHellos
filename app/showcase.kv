#:kivy 1.8.0
#:import HeartfeltHellosButton app.widgets.heartfelt_hellos_button

<ShowcaseScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: content.height > root.height - dp(16)
        AnchorLayout:
            height: max(root.height, content.height)
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (.8, None)
                height: self.minimum_height


BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .9, .9, .9
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: "0.1dp"
        halign:"center"

        HeartfeltHellosButton:
            text: "Go Back" if app.have_back_button else ""
            font_name: "Raleway"
            size_hint_x: "0.3dp"
            halign: "center"
            text_size:dp(80), None

            background_color: (.4, .6, 0.902)
            color: (0, 0.2, 1) if app.have_back_button else (0, 0, 0, 0)
            font_size: "22dp"
            on_release: app.on_back_pressed() if app.have_back_button else None

        Label:
            text: app.current_title
            font_name: "Raleway"
            halign: "center"
            text_size:dp(175), None
            font_size: "23dp"
            color: (0,0,0)
            canvas.before:
                Color: 
                    rgba: 
                        (.4, .6, 0.902,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            


        HeartfeltHellosButton:
            text: "Go Home" if app.have_home_button else ""
            font_name: "Raleway"
            size_hint_x: "0.3dp"
            halign: "center"
            text_size:dp(80), None
            background_color: (.4, .6, 0.902)
            color: (0, 0.2, 1) if app.have_home_button else (0, 0, 0, 0)
            font_size: "22dp"
            on_release: app.go_screen("Title_Screen", "right") if app.have_home_button else None

    ScreenManager:
        id: sm

    BoxLayout:
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)  # Color of the separator line, black in this case
            Rectangle:
                pos: self.pos
                size: self.size

        HeartfeltHellosButton:
            text: 'Find General Ideas'
            font_name: "Raleway"
            halign: "center"
            text_size:dp(150), None
            background_color: (.4, .6, 0.902)
            font_size: "23dp"
            on_release: app.go_screen("General_Idea_Screen", "right")

        Widget:
            # This widget acts as a vertical separator line
            size_hint_x: None
            width: 4  # Width of the separator line
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 1)  # Color of the separator line, black in this case
                Line:
                    points: [self.center_x, self.y, self.center_x, self.top]
                    width: 1.01

        HeartfeltHellosButton:
            text: 'Find Friend Ideas'
            font_name: "Raleway"
            halign: "center"
            text_size:dp(150), None
            background_color: (.4, .6, 0.902)
            font_size: "23dp"
            on_release: app.go_screen("Friend_List", "left")
