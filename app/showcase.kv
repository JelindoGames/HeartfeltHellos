#:kivy 1.8.0
#:import HeartfeltHellosButton app.widgets.heartfelt_hellos_button

<ShowcaseScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: content.height > root.height - dp(16)
        AnchorLayout:
            height: max(root.height, content.height)
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (.8, None)
                height: self.minimum_height


BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .9, .9, .9
        Rectangle:
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1

        HeartfeltHellosButton:
            text: "Go\nBack" if app.have_back_button else ""
            size_hint_x: "0.3dp"
            halign: "center"
            background_color: (0.6, 0.6, 0.6)
            color: (0, 0.5, 1) if app.have_back_button else (0, 0, 0, 0)
            font_size: 30
            on_release: app.on_back_pressed() if app.have_back_button else None

        HeartfeltHellosButton:
            background_color: 0.6, 0.6, 0.6
            text: app.current_title
            font_size: 36
            on_release: app.go_next_screen()

        HeartfeltHellosButton:
            text: "Go\nHome" if app.have_home_button else ""
            size_hint_x: 0.3
            halign: "center"
            background_color: (0.6, 0.6, 0.6)
            color: (0, 0.5, 1) if app.have_home_button else (0, 0, 0, 0)
            font_size: 30
            on_release: app.go_screen("Title_Screen", "right") if app.have_home_button else None

    ScreenManager:
        id: sm

    BoxLayout:
        size_hint_y: 0.1

        HeartfeltHellosButton:
            text: 'Find\nGeneral Ideas'
            halign: "center"
            font_size: 30
            on_release: app.go_screen("General_Idea_Screen", "right")

        HeartfeltHellosButton:
            text: 'Find\nFriend Ideas'
            halign: "center"
            font_size: 30
            on_release: app.go_screen("Friend_List", "left")
